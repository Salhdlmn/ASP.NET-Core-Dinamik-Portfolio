@model List<Contact>
<div class="container" data-aos="fade-up" data-aos-delay="100">

    <div class="row gy-4">

        <div class="col-lg-5">
            @foreach (var item in Model)
            {
                
            <div class="info-wrap">
                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                    <i class="bi bi-geo-alt flex-shrink-0"></i>
                    <div>
                        <h3>Adres</h3>
                        <p>@item.Adress</p>
                    </div>
                </div><!-- End Info Item -->

                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                    <i class="bi bi-telephone flex-shrink-0"></i>
                    <div>
                        <h3>Beni Ara</h3>
                        <p>@item.PhoneNumber</p>
                    </div>
                </div><!-- End Info Item -->

                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                    <i class="bi bi-envelope flex-shrink-0"></i>
                    <div>
                        <h3>Email At</h3>
                        <p>@item.Email</p>
                    </div>
                </div><!-- End Info Item -->

                    <iframe src="https://maps.google.com/maps?q=@(item.Latitude.ToString(System.Globalization.CultureInfo.InvariantCulture)),@(item.Longitude.ToString(System.Globalization.CultureInfo.InvariantCulture))&hl=tr&z=14&output=embed"
                            width="100%"
                            height="270"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
            </div>
            }

        </div>

        @await Component.InvokeAsync("_DefaultMessageComponentPartial")
        
    </div>

</div>