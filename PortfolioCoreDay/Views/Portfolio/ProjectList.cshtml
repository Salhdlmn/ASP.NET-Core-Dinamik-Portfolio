@model List<Portfolio>

@{
    ViewData["Title"] = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="container">
 
    <div class="row">
        <h2>Proje Listesi</h2>
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@item.ImageUrl" class="card-img-top img-fixed" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <div class="mt-auto">
                            <a href="/Portfolio/DeleteProject/@item.PortfolioID" class="btn btn-danger">Sil</a>
                            <a href="/Portfolio/UpdateProject/@item.PortfolioID" class="btn btn-success">Güncelle</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <a href="/Portfolio/CreateProject/" class="btn btn-primary">Yeni Deneyim Girişi</a>
</div>

<style>
    .img-fixed {
        height: 200px; /* istediğin yüksekliği ver */
        object-fit: cover; /* taşmayı engeller, fotoğrafı ortalar */
    }
</style>


