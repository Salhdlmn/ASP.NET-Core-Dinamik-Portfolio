@model List<Experience>
@{
    ViewData["Title"] = "ExperinceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					
					<div class="card-body">
						
						<table class="table mt-3 table-bordered">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Unvan</th>
									<th scope="col">Tarih</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ExperienceId</td>									
										<td>@item.CompanyName</td>							
										
										<td>@item.Title</td>
										<td>@item.ExperienceDate</td>
										<td><a href="/ExperienceList/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
										<td><a href="/ExperienceList/UpdateExperience/@item.ExperienceId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/ExperienceList/CreateExperience/" class="btn btn-primary">Yeni Deneyim Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

